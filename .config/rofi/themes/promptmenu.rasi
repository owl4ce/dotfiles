@import "sidebar/colors.rasi"

* {
  /* General */
  text-font:                            "Comfortaa Bold 12";
  icon-font:                            "feather 30";

  option-6-listview-spacing:            30px;

  // top right bottom left
  menu-window-padding:                  6px 6px 6px 30px;
  menu-prompt-padding:                  10px 20px 15px 20px;
  menu-prompt-margin:                   0px;
  menu-element-border:                  0px 10px 0px 10px;
  menu-element-padding:                 27px 16px 21px 0px;
}

#window {
  width: 230px;
  height: 147px;
  location: center;
  border: 0px;
}

* {
  background-color: @background;
  text-color: @foreground;
  font: @icon-font;
}

#horibox {
  children: [ listview ];
}

#listview {
  layout: horizontal;
}

#element {
  border: 0px;
  padding: @option-element-padding;
  background-color: @background-light;
  border-radius: 8px;
}

#element.selected {
  background-color: @accent;
  text-color: @background;
}

* {
  font: @text-font;
  location: center;
}

#window {
  padding: @menu-window-padding;
  children: [ inputbar, horibox ];
}

#inputbar {
  children: [ prompt ];
  margin: @menu-inputbar-margin;
}

#listview {
  spacing: @option-6-listview-spacing;
  lines: 2;
}

prompt {
  padding: @menu-prompt-padding;
}

#prompt {
  margin: @menu-prompt-margin;
  background-color: @background;
  text-color: @accent;
}

#element {
  font: @icon-font;
  border: @menu-element-border;
  padding: @menu-element-padding;
  border-color: @background-light;
}

#element.selected {
  border-color: @accent;
}

element.active,
element.selected.urgent {
  background-color: @on;
  text-color: @background;
  border-color: @on;
}

element.selected.urgent {
  border-color: @accent;
}

element.urgent,
element.selected.active {
  background-color: @off;
  text-color: @background;
  border-color: @off;
}

element.selected.active {
  border-color: @accent;
}
