#!/usr/bin/env bash

# Eyecandy Theme UI

wall="$(cat ~/.config/openbox/visual-mode/eyecandy/wall)"

# Background Handler
nitrogen --set-zoom-fill --save ~/.wallpaper/eyecandy/$wall

# Panel
tint2 -c ~/.config/tint2/eyecandy-1.tint2rc &
sleep .2s
tint2 -c ~/.config/tint2/eyecandy-2.tint2rc &

# Notification Daemon
dunst -config ~/.config/dunst/dunstrc &
